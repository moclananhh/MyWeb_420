@model PRN_Project.Models.Bill

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Detail> details = ViewBag.ChiTiet;
}
<h1 class="text-center">Detail Bill</h1>
<div class="container" style="margin-bottom: 20px">
    <table class="table" id="table">
        <thead>
            <tr>
                <th>ID Product</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @if (details != null && details.Count() > 0)
            {
                foreach (var item in details)
                {
                    <tr>
                        <td>@item.IdProduct</td>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Amount</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <button class="btn btn-primary"><a asp-action="Index" style="color: #fff; text-decoration: none">Back to List</a></button>
    </div>
</div>

